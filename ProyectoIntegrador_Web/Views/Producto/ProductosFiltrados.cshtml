@model ProductosFiltradosViewModel
@{
    ViewData["Title"] = "Buscar Productos";
}

<h2 class="mb-4 text-center">Buscar Productos</h2>

<!-- ===================== -->
<!-- FILTROS -->
<!-- ===================== -->
<form method="get" class="row g-2 justify-content-center mb-4">

    <!-- Texto -->
    <div class="col-md-3">
        <input type="text"
               name="filtro"
               class="form-control"
               value="@Model.Filtro"
               placeholder="🔍 Buscar producto..." />
    </div>

    <!-- Precio mínimo -->
    <div class="col-md-2">
        <input type="number"
               name="precioMin"
               class="form-control"
               value="@Model.PrecioMin"
               placeholder="Precio mín." />
    </div>

    <!-- Precio máximo -->
    <div class="col-md-2">
        <input type="number"
               name="precioMax"
               class="form-control"
               value="@Model.PrecioMax"
               placeholder="Precio máx." />
    </div>

    <!-- Categoría -->
    <div class="col-md-2">
        <select id="categoriaSelect"
                name="categoriaId"
                class="form-select">
            <option value="">Todas las categorías</option>
            @foreach (var c in Model.Categorias)
            {
                <option value="@c.Id" selected="@(Model.CategoriaId == c.Id)">
                    @c.Nombre
                </option>
            }
        </select>
    </div>

    <!-- Subcategoría -->
    <div class="col-md-2">
        <select id="subcategoriaSelect"
                name="subCategoriaId"
                class="form-select"
                @(Model.CategoriaId == null ? "disabled" : "")>
            <option value="">Todas las subcategorías</option>
            @foreach (var s in Model.SubCategorias)
            {
                <option value="@s.Id" selected="@(Model.SubCategoriaId == s.Id)">
                    @s.Nombre
                </option>
            }
        </select>
    </div>

    <!-- Botón -->
    <div class="col-md-1 d-grid">
        <button type="submit" class="btn btn-primary">
            Buscar
        </button>
    </div>

</form>

<!-- ===================== -->
<!-- RESULTADOS -->
<!-- ===================== -->
@if (Model.Productos.Any())
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Foto</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Productos)
            {
                <tr>
                    <td>
                        <img src="~/images/productos/@p.imagen"
                             alt="@p.nombre"
                             class="img-thumbnail"
                             style="width: 80px; height: 80px; object-fit: cover;" />
                    </td>
                    <td>@p.nombre</td>
                    <td>$@p.precio</td>
                    <td>
                        <a asp-controller="Producto"
                           asp-action="DetallesProducto"
                           asp-route-id="@p.id"
                           class="btn btn-sm btn-outline-primary">
                            Ver detalles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted mt-4">
        No se encontraron productos.
    </p>
}

<!-- ===================== -->
<!-- PAGINACIÓN -->
<!-- ===================== -->
@if (Model.TotalPaginas > 1)
{
    <nav class="d-flex justify-content-center mt-4">
        <ul class="pagination">

            <li class="page-item @(Model.TienePaginaAnterior ? "" : "disabled")">
                <a class="page-link"
                   asp-action="ProductosFiltrados"
                   asp-route-pagina="@(Model.PaginaActual - 1)"
                   asp-route-filtro="@Model.Filtro"
                   asp-route-precioMin="@Model.PrecioMin"
                   asp-route-precioMax="@Model.PrecioMax"
                   asp-route-categoriaId="@Model.CategoriaId"
                   asp-route-subCategoriaId="@Model.SubCategoriaId">
                    Anterior
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link"
                       asp-action="ProductosFiltrados"
                       asp-route-pagina="@i"
                       asp-route-filtro="@Model.Filtro"
                       asp-route-precioMin="@Model.PrecioMin"
                       asp-route-precioMax="@Model.PrecioMax"
                       asp-route-categoriaId="@Model.CategoriaId"
                       asp-route-subCategoriaId="@Model.SubCategoriaId">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.TienePaginaSiguiente ? "" : "disabled")">
                <a class="page-link"
                   asp-action="ProductosFiltrados"
                   asp-route-pagina="@(Model.PaginaActual + 1)"
                   asp-route-filtro="@Model.Filtro"
                   asp-route-precioMin="@Model.PrecioMin"
                   asp-route-precioMax="@Model.PrecioMax"
                   asp-route-categoriaId="@Model.CategoriaId"
                   asp-route-subCategoriaId="@Model.SubCategoriaId">
                    Siguiente
                </a>
            </li>

            </ul>
        </nav>
    }
    <div class="text-center mt-4">
        <a asp-controller="Usuario"
           asp-action="Catalogo"
           class="btn btn-outline-secondary">
            ← Volver a la tienda
        </a>
    </div>
</div>
