@model ProyectoIntegrador_Web.Models.ProductosFiltradosViewModel

@{
    ViewData["Title"] = "Buscar Productos";
}

<h2 class="mb-4 text-center">Buscar Productos</h2>

<!-- 🔍 BARRA DE BÚSQUEDA REUTILIZABLE -->
<partial name="_Buscador" model="Model" />

<!-- ===================== -->
<!-- RESULTADOS -->
<!-- ===================== -->
@if (Model.Productos != null && Model.Productos.Any())
{
    <table class="table table-striped table-hover align-middle mt-4">
        <thead class="table-dark">
            <tr>
                <th>Foto</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Productos)
            {
                <tr>
                    <td>
                        <img src="~/images/productos/@p.imagen"
                             alt="@p.nombre"
                             class="img-thumbnail"
                             style="width: 80px; height: 80px; object-fit: cover;" />
                    </td>
                    <td>@p.nombre</td>
                    <td>$@p.precio</td>
                    <td>
                        <a asp-controller="Producto"
                           asp-action="DetallesProducto"
                           asp-route-id="@p.id"
                           class="btn btn-sm btn-outline-primary">
                            Ver detalles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted mt-4">
        No se encontraron productos.
    </p>
}

<!-- ===================== -->
<!-- PAGINACIÓN -->
<!-- ===================== -->
@if (Model.TotalPaginas > 1)
{
    <nav class="d-flex justify-content-center mt-4">
        <ul class="pagination">

            <li class="page-item @(Model.TienePaginaAnterior ? "" : "disabled")">
                <a class="page-link"
                   asp-action="ProductosFiltrados"
                   asp-route-pagina="@(Model.PaginaActual - 1)"
                   asp-route-filtro="@Model.Filtro"
                   asp-route-precioMin="@Model.PrecioMin"
                   asp-route-precioMax="@Model.PrecioMax"
                   asp-route-categoriaId="@Model.CategoriaId"
                   asp-route-subCategoriaId="@Model.SubCategoriaId">
                    Anterior
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link"
                       asp-action="ProductosFiltrados"
                       asp-route-pagina="@i"
                       asp-route-filtro="@Model.Filtro"
                       asp-route-precioMin="@Model.PrecioMin"
                       asp-route-precioMax="@Model.PrecioMax"
                       asp-route-categoriaId="@Model.CategoriaId"
                       asp-route-subCategoriaId="@Model.SubCategoriaId">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.TienePaginaSiguiente ? "" : "disabled")">
                <a class="page-link"
                   asp-action="ProductosFiltrados"
                   asp-route-pagina="@(Model.PaginaActual + 1)"
                   asp-route-filtro="@Model.Filtro"
                   asp-route-precioMin="@Model.PrecioMin"
                   asp-route-precioMax="@Model.PrecioMax"
                   asp-route-categoriaId="@Model.CategoriaId"
                   asp-route-subCategoriaId="@Model.SubCategoriaId">
                    Siguiente
                </a>
            </li>

            </ul>
        </nav>
    }
    <div class="text-center mt-4">
        <a asp-controller="Usuario"
           asp-action="Catalogo"
           class="btn btn-outline-secondary">
            ← Volver a la tienda
        </a>
    </div>
</div>
<script>
    const categoriaSelect = document.getElementById("categoriaSelect");
    const subcategoriaSelect = document.getElementById("subcategoriaSelect");

    categoriaSelect.addEventListener("change", function () {
        const categoriaId = this.value;

        // Reset subcategorías
        subcategoriaSelect.innerHTML = '<option value="">Todas las subcategorías</option>';
        subcategoriaSelect.disabled = true;

        if (!categoriaId) return;

        fetch(`/Producto/ObtenerSubCategorias?categoriaId=${categoriaId}`)
            .then(response => response.json())
            .then(data => {
                data.forEach(s => {
                    const option = document.createElement("option");
                    option.value = s.id;
                    option.textContent = s.nombre;
                    subcategoriaSelect.appendChild(option);
                });

                subcategoriaSelect.disabled = false;
            });
    });
</script>