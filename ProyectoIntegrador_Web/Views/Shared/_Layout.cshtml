<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoIntegrador_Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoIntegrador_Web.styles.css" asp-append-version="true" />
</head>
<body>
       <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    ProyectoIntegrador_Web
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @{
                            var rol = Context.Session.GetString("Rol")?.ToUpper();
                            var email = Context.Session.GetString("loginUsuario");
                        }

                        <!-- Si NO está logueado -->
                        @if (rol == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                        }

                        <!-- Si está logueado -->
                        @if (rol != null)
                        {
                            <ul class="navbar-nav w-100">

                                <!-- Búsqueda para Cliente y Artesano -->
                                @if (rol == "CLIENTE" || rol == "ARTESANO")
                                {
                                    <li class="nav-item dropdown">
                                        <button class="btn btn-light dropdown-toggle"
                                                type="button"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                            Barra de búsqueda
                                        </button>

                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" asp-controller="Usuario" asp-action="BusquedaDeUsuarios">
                                                    Usuarios
                                                </a>
                                            </li>
                            if (Context.Session.GetString("Rol").ToUpper().Equals("CLIENTE"))
                            {
                                var emailUsuario = Context.Session.GetString("loginUsuario");
                                <li id="divCliente" class="nav-item dropdown">
                                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @emailUsuario
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Cliente" asp-action="Perfil">Perfil</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Producto" asp-action="MostrarProdcutosProvicional">Todos los productos</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-danger fw-semibold" asp-controller="Cliente" asp-action="Logout">
                                                Cerrar sesión
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                            @if (rol == "CLIENTE")
                                            {
                                                <li>
                                                    <a class="dropdown-item" asp-controller="Producto" asp-action="ProductosFiltrados">
                                                        Productos
                                                    </a>
                                                </li>
                                            }

                                        </ul>

                                    </li>
                                }

                                <!-- Perfil (alineado a la derecha con ms-auto) -->
                                <li class="nav-item dropdown ms-auto">
                                    <button class="btn btn-light dropdown-toggle"
                                            type="button"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        @email
                                    </button>

                                    <ul class="dropdown-menu dropdown-menu-end">

                                        <!-- Opciones del CLIENTE -->
                                        @if (rol == "CLIENTE")
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="Cliente" asp-action="Perfil">
                                                    Perfil
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item text-danger fw-semibold"
                                                   asp-controller="Cliente"
                                                   asp-action="Logout">
                                                    Cerrar sesión
                                                </a>
                                            </li>
                                        }

                                        <!-- Opciones del ARTESANO -->
                                        @if (rol == "ARTESANO")
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="Artesano" asp-action="PerfilArtesano">
                                                    Perfil
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Producto" asp-action="AltaProducto">
                                                    Agregar nuevo producto
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Artesano" asp-action="ProductosDelArtesano">
                                                    Tus productos
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item text-danger fw-semibold"
                                                   asp-controller="Artesano"
                                                   asp-action="Logout">
                                                    Cerrar sesión
                                                </a>
                                            </li>
                                        }

                                        <!-- Opciones del ADMIN -->
                                        @if (rol == "ADMIN")
                                        {
                                            <li>
                                                <a class="dropdown-item text-danger fw-semibold"
                                                   asp-controller="Admin" asp-action="Logout">
                                                    Cerrar sesión
                                                </a>
                                            </li>
                                        }

                                    </ul>
                                </li>

                            </ul>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HechoXMi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

