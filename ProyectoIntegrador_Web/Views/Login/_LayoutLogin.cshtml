<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background: #f4f4f4;
            margin: 0;
        }

        /* ===== LOADER ===== */
        #globalLoader {
            position: fixed;
            inset: 0;
            z-index: 9999;
        }

        .loader-backdrop {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.4);
        }

        .loader-box {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 25px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.25);
        }
    </style>
</head>

<body class="login-body d-flex flex-column min-vh-100">

    <!-- ===== LOADER GLOBAL ===== -->
    <div id="globalLoader" class="d-none">
        <div class="loader-backdrop"></div>

        <div class="loader-box text-center">
            <div class="spinner-border text-dark" role="status"></div>
            <div id="loaderMessage" class="mt-2 fw-semibold">Procesando...</div>
            <div class="small text-muted">Por favor esperá</div>
        </div>
    </div>

    <main class="login-main flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light mt-auto">
        <div class="container-fluid ">

            <div class="row text-center text-md-start align-items-center">

                <!-- INFO -->
                <div class="col-md-4 mb-1">
                    <strong class="small">Proyecto Integrador</strong>
                    <div class="small">
                        Plataforma académica de artesanos y clientes 💙
                    </div>
                </div>

                <!-- SOPORTE -->
                <div class="col-md-4 mb-1">
                    <strong class="small">Soporte</strong><br />
                    <a href="mailto:soporte@proyectointegrador.com"
                       class="text-decoration-none text-info small">
                        soporte@proyectointegrador.com
                    </a>
                </div>

                <!-- INSTITUCIONAL -->
                <div class="col-md-4 mb-1">
                    <strong class="small">Institucional</strong>
                    <div class="small">
                        ORT Uruguay — Ingeniería
                    </div>
                </div>

            </div>

            <hr class="border-secondary my-1" />

            <div class="text-center small">
                &copy; @DateTime.Now.Year — Proyecto Integrador
            </div>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <!-- ===== SCRIPT LOADER ===== -->
    <script>
        function showLoader(message) {
            const loader = document.getElementById("globalLoader");
            const msg = document.getElementById("loaderMessage");

            if (msg && message) {
                msg.textContent = message;
            }

            if (loader) {
                loader.classList.remove("d-none");
            }
        }

        function hideLoader() {
            const loader = document.getElementById("globalLoader");
            if (loader) loader.classList.add("d-none");
        }

        document.addEventListener("submit", function (e) {
            const form = e.target;
            if (!(form instanceof HTMLFormElement)) return;

            if (!form.classList.contains("js-loader")) return;

            const method = (form.getAttribute("method") || "get").toLowerCase();
            if (method !== "post") return;

            const customMessage = form.getAttribute("data-loader-text");

            showLoader(customMessage || "Procesando...");

            const btns = form.querySelectorAll("button[type='submit'], input[type='submit']");
            btns.forEach(b => b.disabled = true);
        });

        window.addEventListener("pageshow", hideLoader);
    </script>


</body>
</html>
