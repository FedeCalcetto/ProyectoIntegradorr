@{
    Layout = null; // Vista limpia, sin navbar ni footer
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Factura</title>

    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background: #fff;
        }

        /* Contenedor principal de la factura */
        .factura {
            width: 800px;
            margin: 40px auto;
        }

        h2 {
            margin-bottom: 5px;
        }

        p {
            margin: 2px 0;
        }

        hr {
            margin: 15px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th, td {
            padding: 8px;
            border-bottom: 1px solid #ccc;
            text-align: left;
        }

        th {
            background-color: #f5f5f5;
        }

        h3 {
            text-align: right;
            margin-top: 20px;
        }

        /* Contenedor del botón */
        .no-printt {
            margin-top: 30px;
            text-align: center;
        }

            .no-print button {
                display: block;
                margin: 0 auto;
            }

        /* Ocultar botón al imprimir */
        @@media print {
            .no-print {
                display: none;
            }

            body {
                margin: 0;
            }
        }
    </style>
</head>
<body>

    <div class="factura">
        <h2>Factura Nº 0001</h2>

        <p><strong>Cliente:</strong> Juan Pérez</p>
        <p><strong>Fecha:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>

        <hr />

        <table>
            <thead>
                <tr>
                    <th>Producto</th>
                    <th style="text-align:right;">Precio</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Producto A</td>
                    <td style="text-align:right;">$ 300</td>
                </tr>
            </tbody>
        </table>

        <h3>Total: $ 300</h3>

        <!-- Botón imprimir -->
        <div class="no-printt">
            <button onclick="window.print()">Imprimir</button>
        </div>
    </div>

</body>
</html>
