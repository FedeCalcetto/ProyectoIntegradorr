@model PerfilPublicoViewModel

<div class="container mt-4">

    <!-- MENSAJE DE ÉXITO -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- PERFIL DEL ARTESANO -->
    <div class="card mb-4">
        <div class="card-body text-center">

            @if (!string.IsNullOrEmpty(Model.Artesano.foto))
            {
                <img src="@Model.Artesano.foto"
                     class="img-fluid rounded-circle mb-3"
                     style="width:150px;height:150px;object-fit:cover;" />
            }
            else
            {
                <img src="/img/default-user.png"
                     class="img-fluid rounded-circle mb-3"
                     style="width:150px;height:150px;object-fit:cover;" />
            }

            <h2>@Model.Artesano.nombre</h2>
            <p class="text-muted">@Model.Artesano.descripcion</p>
            <p><strong>Teléfono:</strong> @Model.Artesano.telefono</p>
        </div>
    </div>

    <!-- LISTA DE PRODUCTOS -->
    <h4 class="mb-3">Productos</h4>

    <div class="row">
        @if (Model.Productos != null && Model.Productos.Any())
        {
            foreach (var producto in Model.Productos)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">

                        <img src="/images/productos/@producto.imagen"
                             class="card-img-top"
                             alt="@producto.nombre"
                             style="height:200px;object-fit:cover;" />

                        <div class="card-body">
                            <h5 class="card-title">@producto.nombre</h5>
                            <p class="card-text">@producto.descripcion</p>
                            <p class="mb-1"><strong>Precio:</strong> $@producto.precio</p>
                            <p class="mb-1"><strong>Stock:</strong> @producto.stock</p>
                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted">Este artesano aún no tiene productos publicados.</p>
            </div>
        }
    </div>

    <!-- FORMULARIO DE REPORTE DEL ARTESANO -->
    <hr class="my-4" />

    <div class="mt-3">
        <h6 class="fw-semibold text-danger">Reportar a este artesano</h6>

        <form asp-controller="Usuario"
              asp-action="ReportarArtesano"
              method="post"
              class="mt-2">

            @Html.AntiForgeryToken()

            <!-- ID DEL ARTESANO -->
            <input type="hidden" name="artesanoId" value="@Model.Artesano.id" />

            <div class="mb-2">
                <textarea asp-for="Reporte.razon"
                          class="form-control form-control-sm"
                          rows="3"
                          placeholder="Describa el motivo del reporte"></textarea>

                <span asp-validation-for="Reporte.razon"
                      class="text-danger small"></span>
            </div>

            <button type="submit"
                    class="btn btn-sm btn-outline-danger">
                🚩 Reportar artesano
            </button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
