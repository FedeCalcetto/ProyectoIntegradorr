@model PerfilPublicoViewModel

<div class="container mt-4">

    <!-- MENSAJE DE ÉXITO -->
    @* @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    } *@

    <!-- PERFIL DEL ARTESANO -->
    <div class="card mb-4">
        <div class="card-body text-center">

            @if (!string.IsNullOrEmpty(Model.Artesano.foto))
            {
                <img src="@Model.Artesano.foto"
                     class="img-fluid rounded-circle mb-3"
                     style="width:150px;height:150px;object-fit:cover;"
                     alt="Foto de @Model.Artesano.nombre" />
            }
            else
            {
                <img src="/img/default-user.png"
                     class="img-fluid rounded-circle mb-3"
                     style="width:150px;height:150px;object-fit:cover;"
                     alt="Foto por defecto" />
            }

            <h2>@Model.Artesano.nombre</h2>
            <p class="text-muted">@Model.Artesano.descripcion</p>
            <p><strong>Teléfono:</strong> @Model.Artesano.telefono</p>
        </div>
    </div>

    <!-- LISTA DE PRODUCTOS -->
    <h4 class="mb-3">Productos</h4>

    <div class="row">
        @if (Model.Productos != null && Model.Productos.Any())
        {
            foreach (var producto in Model.Productos)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <a asp-controller="Producto"
                       asp-action="DetallesProducto"
                       asp-route-id="@producto.id"
                       class="text-decoration-none text-dark">

                        <div class="card shadow-sm h-100">
                            <img src="~/images/productos/@producto.imagen"
                                 class="card-img-top"
                                 style="height:160px; object-fit:contain;"
                                 alt="Producto @producto.nombre" />

                            <div class="card-body text-center">
                                <h6 class="mb-1">@producto.nombre</h6>
                                <p class="fw-bold mb-0">$@producto.precio</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted">
                    Este artesano aún no tiene productos publicados.
                </p>
            </div>
        }
    </div>

    <!-- COMENTARIOS DEL ARTESANO -->
    <hr class="my-4" />

    <h4 class="mb-3">Comentarios</h4>

    @if (Model.Artesano.comentarios != null && Model.Artesano.comentarios.Any())
    {
        <div class="list-group mb-4">
            @foreach (var comentario in Model.Artesano.comentarios)
            {
                <div class="list-group-item">
                    <p class="mb-1">@comentario.contenido</p>

                    @if (comentario.cliente != null)
                    {
                        <small class="text-muted">
                            — @comentario.cliente.nombre
                        </small>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">
            Este artesano aún no tiene comentarios.
        </p>
    }

    <!-- FORMULARIO PARA AGREGAR COMENTARIO -->
    <div class="mb-4">
        <h6 class="fw-semibold">Dejar un comentario</h6>

        <form asp-controller="Usuario"
              asp-action="ComentarArtesano"
              method="post">

            @Html.AntiForgeryToken()

            <input type="hidden" name="artesanoId" value="@Model.Artesano.id" />

            <div class="mb-2">
                <textarea asp-for="Comentario.contenido"
                          class="form-control"
                          rows="3"
                          placeholder="Escriba su comentario"></textarea>

                <span asp-validation-for="Comentario.contenido"
                      class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-sm btn-primary">
                💬 Enviar comentario
            </button>
        </form>
    </div>

    <!-- FORMULARIO DE REPORTE DEL ARTESANO -->
    <hr class="my-4" />

    <div class="mt-3">
        <h6 class="fw-semibold text-danger">Reportar a este artesano</h6>

        <form asp-controller="Usuario"
              asp-action="ReportarArtesano"
              method="post"
              class="mt-2">

            @Html.AntiForgeryToken()

            <input type="hidden" name="artesanoId" value="@Model.Artesano.id" />

            <div class="mb-2">
                <textarea asp-for="Reporte.razon"
                          class="form-control form-control-sm"
                          rows="3"
                          placeholder="Describa el motivo del reporte"></textarea>

                <span asp-validation-for="Reporte.razon"
                      class="text-danger small"></span>
            </div>

            <button type="submit"
                    class="btn btn-sm btn-outline-danger">
                🚩 Reportar artesano
            </button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
