@using ProyectoIntegrador.LogicaNegocio.Entidades
@model BusquedaDeUsuariosViewModel

<div class="container mt-4">

    <!-- Título -->
    <h2 class="mb-4 text-center fw-bold">Buscar Usuarios</h2>

    <!-- Barra de búsqueda -->
    <form method="get" class="d-flex justify-content-center mb-4">
        <input type="text"
               name="filtro"
               value="@Model.Filtro"
               class="form-control w-50 shadow-sm"
               placeholder="🔍 Buscar usuarios..." />
        <button type="submit" class="btn btn-primary ms-3 px-4">
            Buscar
        </button>
    </form>

    <!-- Tabla de resultados -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Foto</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Usuarios != null && Model.Usuarios.Any())
                    {
                        foreach (var u in Model.Usuarios)
                        {
                            <tr>
                                <!-- FOTO -->
                                <td>
                                    @if (u is Cliente c)
                                    {
                                        <img src="@c.foto"
                                             class="rounded-circle"
                                             style="width:50px; height:50px; object-fit:cover;" />
                                    }
                                    else if (u is Artesano a)
                                    {
                                        <img src="@a.foto"
                                             class="rounded-circle"
                                             style="width:50px; height:50px; object-fit:cover;" />
                                    }
                                </td>

                                <!-- DATOS -->
                                <td>@u.nombre</td>
                                <td>@u.apellido</td>

                                <!-- ACCIONES -->
                                <td>
                                    <!-- Ver perfil (solo artesanos) -->
                                    @if (u is Artesano artesano)
                                    {
                                        <a asp-controller="Usuario"
                                           asp-action="PerfilPublico"
                                           asp-route-id="@u.id"
                                           class="btn btn-outline-primary btn-sm mb-1">
                                            Ver Perfil
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted d-block">—</span>
                                    }

                                    <!-- Seguir / Dejar de seguir -->
                                    @if (Model.usuarioLogueado is Cliente cliente && u is Artesano artesanoSeguido)
                                    {
                                        bool yaLoSigue = cliente.artesanosSeguidos
                                        .Any(a => a.id == artesanoSeguido.id);

                                        if (!yaLoSigue)
                                        {
                                            <form asp-controller="Usuario"
                                                  asp-action="Seguir"
                                                  method="post"
                                                  class="d-inline">
                                                <input type="hidden" name="artesanoId" value="@artesanoSeguido.id" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    Seguir
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-controller="Usuario"
                                                  asp-action="DejarDeSeguir"
                                                  method="post"
                                                  class="d-inline">
                                                <input type="hidden" name="artesanoId" value="@artesanoSeguido.id" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    Dejar de seguir
                                                </button>
                                            </form>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center p-4 text-muted">
                                No se encontraron usuarios.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>