@using ProyectoIntegrador.LogicaNegocio.Entidades
@model IEnumerable<FacturaNoFiscalArtesano>

<h2>Mis ventas</h2>

<div class="row">
    @foreach (var factura in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        Resumen de factura
                    </h5>

                    <p class="card-text">
                        <strong>Fecha:</strong> @factura.Fecha.ToString("dd/MM/yyyy") <br />
                        <strong>Total:</strong> $@factura.Total
                    </p>

                    <a class="btn btn-outline-primary"
                       asp-controller="FacturaNoFiscal"
                       asp-action="ArtesanoFacturaNoFiscal"
                       asp-route-facturaId="@factura.Id">
                        Ver detalle
                    </a>
                </div>
            </div>
        </div>
    }
</div>
