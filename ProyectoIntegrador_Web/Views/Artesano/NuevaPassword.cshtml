@model ProyectoIntegrador_Web.Models.NuevaPasswordViewModel
@{
    ViewData["Title"] = "Cambiar contraseña";
}
<form asp-action="NuevaPassword" method="post">
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

<div class="container mt-4" style="max-width: 400px;">
    <h4 class="mb-3">Contraseña</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Campo: Nueva contraseña -->
    <div class="form-group position-relative mb-3">
        <label class="form-label">Contraseña nueva</label>

        <input asp-for="Password"
               type="password"
               class="form-control password-input"
               placeholder="Contraseña nueva" />
            <span asp-validation-for="Password" class="text-danger small"></span>

    </div>

    <!-- Campo: Confirmar -->
    <div class="form-group position-relative mb-4">
        <label class="form-label">Confirma la contraseña nueva</label>

        <input asp-for="ConfirmPassword"
               type="password"
               class="form-control password-input"
               placeholder="Confirmar contraseña" />

        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>


    <div class="mt-3">
            <button type="submit" class="btn btn-primary">Cambiar contraseña</button>
            <a asp-action="PerfilArtesano" id="volverArtesano" class="btn btn-outline-secondary">Volver</a>
    </div>
</div>
        </form>

