@model ProyectoIntegrador_Web.Models.EditarArtesanoViewModel

@{
    ViewData["Title"] = "Perfil";
}

<div class="layout">

    <div class="barraLateral">
        <div class="sidebar">
            <p>Menú</p>
            <p>Próximamente...</p>
        </div>
    </div>

    <div class="contenido py-5">

        <h2 class="text-center mb-3 fw-semibold" style="color: black;">Mi Perfil</h2>
        <p class="text-center text-muted mb-4">Actualiza tus datos personales</p>

        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Mensaje"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- ÚNICO FORMULARIO -->
        <form asp-action="PerfilArtesano" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- FOTO -->
            <div class="d-flex justify-content-center mb-2">
                <img id="fotoPerfil"
                     src="@(string.IsNullOrEmpty(Model.Foto)
                                             ? "/images/usuarios/default-image.jpg"
                                             : Model.Foto)"
                     class="img-thumbnail shadow foto-perfil">
            </div>

            <div class="text-center mb-3">
                <label class="btn btn-outline-secondary">
                    Seleccionar foto
                    <input id="archivoFoto" type="file" name="archivoFoto" accept="image/*" hidden />
                </label>

                <div id="archivoSeleccionado" class="mt-2 text-muted"></div>
            </div>

            <!-- CAMPOS -->
            <input type="hidden" asp-for="Foto" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-semibold"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Apellido" class="form-label fw-semibold"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label fw-semibold"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control bg-light" readonly />
            </div>

            <input type="hidden" asp-for="Password" />

            <div class="mb-3">
                <a asp-controller="Usuario"
                   asp-action="CambioContra"
                   asp-route-returnUrl="/Artesano/PerfilArtesano"
                   class="btn btn-outline-secondary">
                    Nueva contraseña
                </a>
            </div>

            <!-- BOTONES -->
            <div class="d-flex justify-content-between">
                <a asp-action="Inicio" class="btn btn-outline-secondary">Volver</a>
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
            </div>
        </form>


        <div class="d-flex justify-content-center mt-4">
            <button type="button"
                    id="btnEliminarCuenta"
                    class="btn btn-danger">
                Eliminar Cuenta
            </button>
        </div>

        @await Html.PartialAsync("_ModalEliminarCuenta", Model.EliminarCuenta)

        <!-- <div class="d-flex justify-content-center mt-4">
            <a asp-action="ConfirmarEliminacion" class="btn btn-danger">
                Eliminar Cuenta
            </a>
        </div>-->

        <!-- PREVISUALIZACIÓN -->
        <script>
            const input = document.getElementById("archivoFoto");
            const preview = document.getElementById("fotoPerfil");
            const archivoLabel = document.getElementById("archivoSeleccionado");

            input.addEventListener("change", function () {
                if (this.files && this.files[0]) {
                    const archivo = this.files[0];
                    archivoLabel.innerHTML = `<strong>${archivo.name}</strong>`;

                    const reader = new FileReader();
                    reader.onload = e => preview.src = e.target.result;
                    reader.readAsDataURL(archivo);
                }
            });
        </script>

    </div>
</div>




<!-- SI HUBO ERROR EN EL MODAL, SE REABRE -->
@if (TempData["ErrorEliminar"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modal = new bootstrap.Modal(
                document.getElementById("modalEliminarCuenta")
            );
            modal.show();
        });
    </script>
}

<!-- Recien al apretar el boton eliminarcuenta, llama en usuarioController a GenerarCodigoEliminacion -->
<script>
    document.getElementById("btnEliminarCuenta")
        .addEventListener("click", async function () {

            // token antiforgery del formulario
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                // llamar al controller para generar y enviar el código
                const response = await fetch('/Usuario/GenerarCodigoEliminacion', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    }
                });

                if (!response.ok) {
                    alert("Error al enviar el código. Intentá nuevamente.");
                    return;
                }

                // abrir el modal SOLO si el mail se envió
                const modal = new bootstrap.Modal(
                    document.getElementById("modalEliminarCuenta")
                );
                modal.show();

            } catch (e) {
                alert("Error inesperado al enviar el código.");
            }
        });
</script>


<!-- reenviar codigo -->
<script>
    document.getElementById("btnReenviarCodigo")
        ?.addEventListener("click", async function () {

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                const response = await fetch('/Usuario/GenerarCodigoEliminacion', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    }
                });

                if (!response.ok) {
                    alert("No se pudo reenviar el código.");
                    return;
                }

                alert("Te reenviamos un nuevo código a tu correo.");

            } catch {
                alert("Error al reenviar el código.");
            }
        });
</script>

<script>
    document.getElementById("modalEliminarCuenta")
        ?.addEventListener('hidden.bs.modal', function () {

            // avisamos al servidor que ya no debe mostrar el error
            fetch('/Usuario/LimpiarErrorEliminar', { //esto en usuarioController
                method: 'POST'
            });
        });
</script>
