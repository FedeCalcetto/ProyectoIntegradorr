@using ProyectoIntegrador.LogicaNegocio.Entidades
@model List<Producto>

<div class="container mt-4">
    <h2 class="mb-4 text-center fw-bold">Mis favoritos</h2>

    @if (Model.Any())
    {
        <div class="row g-3">
            @foreach (var p in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <img src="~/images/productos/@p.imagen" class="card-img-top" style="height:180px; object-fit:cover;" />

                        <div class="card-body d-flex flex-column">
                            <h6 class="fw-semibold">@p.nombre</h6>
                            <div class="text-muted small mb-2">$@p.precio</div>

                            <div class="mt-auto d-flex gap-2">
                                <a class="btn btn-sm btn-outline-primary w-100"
                                   asp-controller="Producto"
                                   asp-action="DetallesProducto"
                                   asp-route-id="@p.id">
                                    Ver
                                </a>

                                <form asp-action="QuitarFavorito" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productoId" value="@p.id" />
                                    <button class="btn btn-sm btn-outline-danger" title="Quitar de favoritos">
                                        ♥
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted">Todavía no tenés productos favoritos.</p>
    }
</div>
